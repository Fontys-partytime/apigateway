{
  "Routes": [
    // Parties Service
    {
      "UpstreamPathTemplate": "/api/parties",
      "UpstreamHttpMethod": [ "Get", "Post" ],
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "partytime-party-service",
          "Port": 5000
        }
      ],
      "DownstreamPathTemplate": "/api/parties"
    },
    {
      "UpstreamPathTemplate": "/api/parties/{id}",
      "UpstreamHttpMethod": [ "Get", "Put", "Delete" ],
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "partytime-party-service",
          "Port": 5000
        }
      ],
      "DownstreamPathTemplate": "/api/parties/{id}"
    }
  ],
  "GlobalConfiguration": {
    "BaseUrl": "http://localhost:800"
  }
}